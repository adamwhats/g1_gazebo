{
  "name": "G1_Gazebo",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",

  "mounts": [
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.Xauthority,target=/root/.Xauthority,type=bind",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.claude,target=/root/.claude,type=bind",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.claude.json,target=/root/.claude.json,type=bind",
    "source=/dev,target=/dev,type=bind"
  ],

  "containerEnv": {
    "DISPLAY": "${localEnv:DISPLAY}",
    "QT_X11_NO_MITSHM": "1",
    "NVIDIA_VISIBLE_DEVICES": "all",
    "NVIDIA_DRIVER_CAPABILITIES": "all"
  },

  "runArgs": [
    "--network=host",
    "--privileged",
    "--cap-add=SYS_PTRACE",
    "--security-opt=seccomp=unconfined",
    "--security-opt=apparmor=unconfined",
    "--gpus=all"
  ],

  "postCreateCommand": "/bin/bash ./.devcontainer/post_create.sh",

  "remoteUser": "root",

  "customizations": {
    "vscode": {
      "extensions": [
        "aaron-bond.better-comments",
        "anthropic.claude-code",
        "charliermarsh.ruff",
        "gruntfuggly.todo-tree",
        "llvm-vs-code-extensions.vscode-clangd",
        "morningfrog.urdf-visualizer",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-vscode.cmake-tools",
        "redhat.vscode-yaml",
        "smilerobotics.urdf",
        "streetsidesoftware.code-spell-checker",
        "twxs.cmake",
        "ue.alphabetical-sorter",
        "xaver.clang-format"
      ]
    }
  }
}
